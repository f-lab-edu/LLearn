# =============================================================================
# 🚀 LLEARN 플랫폼 환경설정
# =============================================================================
# 설치 후 아래 항목들을 실제 값으로 변경해주세요
# 변경 필요한 항목은 🔥 표시되어 있습니다
#
# 🛳️ 컨테이너 이름 설정 구조
#
# APP CONTAINER_NAME = {APP_NAME}-app 
# MYSQL DATABASE CONTAINER NAME = {MYSQL_DATABASE}-db
# PROMETHEUS CONTAINER NAME = {APP_NAME}-prometheus
# GRAFANA CONTAINER NAME = {APP_NAME}-grafana
# =============================================================================

# =============================================================================
# 🌐 네트워크 설정c
# =============================================================================
# 웹 서버 포트
WEB_PORT=8000

# 데이터베이스 포트
MYSQL_PORT=3306 

# 모니터링 포트
PROMETHEUS_PORT=9090 
GRAFANA_PORT=3001 

# 프론트엔드 포트
FRONTEND_PORT=3000

# =============================================================================
# 📊 데이터베이스 설정
# =============================================================================
MYSQL_DATABASE=llearn              #🔥    
MYSQL_USER=llearn_user          
MYSQL_PASSWORD=llearn_password

DATABASE_NAME=llearn_admin
DATABASE_PASSWORD=llearn_pass         
DATABASE_ROOT_PASSWORD=!Llearn     #🔥  

# =============================================================================
# 🏷️ 애플리케이션 설정
# =============================================================================
APP_NAME=llearn                    #🔥
APP_VERSION=1.0.0

# =============================================================================
# 🔐 보안 설정
# =============================================================================
SECRET_KEY=                         #🔥
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MIN=15
REFRESH_TOKEN_EXPIRE_DAYS=14

# =============================================================================
# 🤖 AI/LLM 설정
# =============================================================================
LLM_API_KEY=s
LLM_MODEL=gpt-4o-mini              
LLM_ENDPOINT=https://api.openai.com/v1/chat/completions
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1200



LANGFUSE_SECRET_KEY=your-key   #🔥
LANGFUSE_PUBLIC_KEY=your-key   #🔥
LANGFUSE_HOST="https://us.cloud.langfuse.com"

# =============================================================================
# 👤 관리자 계정 (저장되어있음)
# =============================================================================
ADMIN_EMAIL=admin@admin.com
ADMIN_NAME=시스템관리자
ADMIN_PASSWORD=!Admin1234

# =============================================================================
# 🔧 시스템 내부 설정 (일반적으로 변경 불필요)
# =============================================================================
# 데이터베이스 연결 URL (자동 생성됨)
DATABASE_URL=mysql+aiomysql://${DATABASE_NAME}:${DATABASE_PASSWORD}@${MYSQL_DATABASE}-db:3306/${MYSQL_DATABASE}
SQLALCHEMY_DATABASE_URL=${DATABASE_URL}

# Docker 내부 연결 설정
DB_HOST=${MYSQL_DATABASE}-db

# REDIS
REDIS_PASSWORD=redis_secure_password_2024 #🔥
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:redis_secure_password_2024@redis:6379/0

# KAFKA
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"

USE_SIMPLE_METRICS=true
GRAFANA_ADMIN_PASSWORD=your_secure_password
PROMETHEUS_RETENTION=30d

# Rate limiting (도입시 true로)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000


# =============================================================================
# 📝 설정 가이드
# =============================================================================
# 1. 🔥 표시된 항목들을 반드시 변경하세요
# 2. SECRET_KEY 생성: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. OpenAI API 키: https://platform.openai.com/api-keys
# 4. 강력한 비밀번호 사용을 권장합니다
